
<%= simple_form_for(@user) do |f| %>
<% if current_user %>
    <%= content_tag(:h1, "#{current_user.first_name}  #{current_user.last_name}")  %> </h1>
  <% end %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :customers_id, as: :radio_buttons, collection: [['Employee', 1], ['Student', 2]] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
