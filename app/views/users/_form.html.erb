
<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs" style="margin-left: 2em;">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :customers_id, as: :radio_buttons, collection: [['Student', 1], ['Employee', 2]] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
